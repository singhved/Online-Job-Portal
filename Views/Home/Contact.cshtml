<script>
    function SendMessage() {
        debugger;
        var name = $('#Name').val();
        var Mobile = $('#Mobile').val();
        var email = $('#Email').val();
        var subject = $('#Subject').val();
        var message = $('#Message').val();
        

        if (name == '') {
            alert('Enter Name');
        }
        else if (Mobile == '') {
            alert('Enter Mobile');
        }
        else if (email == '') {
            alert('Enter Email');
        }
        else if (subject == '') {
            alert('Enter Subjects');
        }
        else if (message == '') {
            alert('Write some msg Please!')
        }
        
        else {
            $.get("/Home/InsertContactForAnyQuery", { Name: name, Mobile: Mobile, Email: email, Subject: subject, Message: message }, function (data) {
            });
            
        } location.reload();
    }
</script>
